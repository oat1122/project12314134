<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFEFE"

    tools:context=".MainActivity"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="835dp"
        android:orientation="horizontal"
        android:translationX="10dp"
        android:translationY="10dp">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="739dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="เจดีย์กาญจนาภิเษก"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:translationX="15dp"
                    android:translationY="30dp" />

                <ImageButton
                    android:id="@+id/vat01"
                    android:layout_width="match_parent"
                    android:layout_height="276dp"
                    android:backgroundTint="#FEFEFE"
                    android:onClick="NextPage"
                    android:scaleType="fitXY"
                    android:translationY="25dp"
                    app:srcCompat="@drawable/vat02" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="อนุสรณ์สถานผู้เสียสละเขาค้อ"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:translationX="15dp"
                    android:translationY="30dp" />

                <ImageButton
                    android:id="@+id/ao1"
                    android:layout_width="match_parent"
                    android:layout_height="276dp"
                    android:backgroundTint="#FEFEFE"
                    android:onClick="Next"
                    android:scaleType="fitXY"
                    android:translationY="30dp"
                    app:srcCompat="@drawable/ao1" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ทุ่งกังหันลม"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:translationX="15dp"
                    android:translationY="30dp" />

                <ImageButton
                    android:id="@+id/kak"
                    android:layout_width="match_parent"
                    android:layout_height="276dp"
                    android:background="#FDFDFD"
                    android:onClick="NextNext"
                    android:scaleType="fitXY"
                    android:translationY="30dp"
                    app:srcCompat="@drawable/kak01" />

                <TextView
                    android:id="@+id/textView36"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="น้ำตกศรีดิษฐ์"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:translationX="15dp"
                    android:translationY="45dp" />

                <ImageButton
                    android:id="@+id/tok01"
                    android:layout_width="match_parent"
                    android:layout_height="336dp"
                    android:background="#FDFDFD"
                    android:onClick="mynext"
                    android:scaleType="fitXY"
                    android:translationY="45dp"
                    app:srcCompat="@drawable/toko1" />


            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="393dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:translationX="-390dp"
            android:translationY="740dp">

            <Button
                android:id="@+id/button13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawableBottom="@drawable/map_01"
                android:text="" />

            <Button
                android:id="@+id/shop01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="ShopNext"
                android:background="@color/white"
                android:drawableBottom="@drawable/shop01"
                android:text="" />

            <Button
                android:id="@+id/setin01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="ShopSet"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawableBottom="@drawable/setting_01"
                android:text="" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
